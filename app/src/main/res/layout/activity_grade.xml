<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitefff"
    android:orientation="vertical"
    tools:context=".ui.mine.activity.GradeActivity">

    <com.hlxyedu.mhk.weight.actionbar.XBaseTopBar
        android:id="@+id/xbase_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowLeft_x="true"
        app:isShowRight_x="false"
        app:middleText_x="@string/grade" />

    <RelativeLayout
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/finished_pager_tv"
                    style="@style/textSize_whitefff_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/icon_grade_top_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="32dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:background="@drawable/icon_test_score_bg">

                        <TextView
                            android:id="@+id/listening_test_type_tv"
                            style="@style/textSize_black303_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="16dp"
                            android:text="听力理解"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/listening_correct_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/listening_test_type_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="听力理解答对题数：" />

                        <TextView
                            android:id="@+id/listening_tv"
                            style="@style/textSize_orangeD57_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/listening_test_type_tv"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/listening_correct_number_tv" />

                        <TextView
                            android:id="@+id/listening_all_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/listening_correct_number_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="听力理解题总数：" />

                        <TextView
                            android:id="@+id/listening_all_tv"
                            style="@style/textSize_orangeD57_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/listening_correct_number_tv"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/listening_all_number_tv" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:background="@drawable/icon_test_score_bg">

                        <TextView
                            android:id="@+id/read_test_type_tv"
                            style="@style/textSize_black303_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="16dp"
                            android:text="阅读理解"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/read_correct_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/read_test_type_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="阅读理解答对题数：" />

                        <TextView
                            android:id="@+id/read_tv"
                            style="@style/textSize_orangeD57_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/read_test_type_tv"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/read_correct_number_tv" />

                        <TextView
                            android:id="@+id/read_all_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/read_correct_number_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="阅读理解题总数：" />

                        <TextView
                            android:id="@+id/read_all_tv"
                            style="@style/textSize_orangeD57_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/read_correct_number_tv"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/read_all_number_tv" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:background="@drawable/icon_test_score_bg">

                        <TextView
                            android:id="@+id/book_test_type_tv"
                            style="@style/textSize_black303_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="16dp"
                            android:text="书面表达"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/book_correct_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/book_test_type_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="书面表达答对题数：" />

                        <TextView
                            android:id="@+id/book_tv"
                            style="@style/textSize_orangeD57_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/book_test_type_tv"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/book_correct_number_tv" />

                        <TextView
                            android:id="@+id/book_all_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/book_correct_number_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="书面表达题总数：" />

                        <TextView
                            android:id="@+id/book_all_tv"
                            style="@style/textSize_orangeD57_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/book_correct_number_tv"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/book_all_number_tv" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:background="@drawable/icon_test_score_bg">

                        <TextView
                            android:id="@+id/speak_test_type_tv"
                            style="@style/textSize_black303_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="16dp"
                            android:text="口语"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/speak_correct_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/speak_test_type_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="口语答对题数"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/speak_all_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/speak_correct_number_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="口语练习题总数：" />

                        <TextView
                            android:id="@+id/speak_tv"
                            style="@style/textSize_orangeD57_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/speak_correct_number_tv"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/speak_all_number_tv" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:background="@drawable/icon_test_score_bg">

                        <TextView
                            android:id="@+id/write_test_type_tv"
                            style="@style/textSize_black303_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="16dp"
                            android:text="作文"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/write_correct_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/write_test_type_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="听力理解答对题数"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/write_all_number_tv"
                            style="@style/textSize_blackb4b_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/write_correct_number_tv"
                            android:layout_marginStart="34dp"
                            android:layout_marginTop="10dp"
                            android:text="作文题总数：" />

                        <TextView
                            android:id="@+id/write_tv"
                            style="@style/textSize_orangeD57_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/write_correct_number_tv"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/write_all_number_tv" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>