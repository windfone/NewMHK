<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitefff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.exercise.fragment.TestFinishFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:src="@drawable/icon_complete" />

    <TextView
        style="@style/textSize_black000_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/exam_complete" />

    <TextView
        android:id="@+id/wait_text"
        style="@style/textSize_black000_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="73dp"
        android:text="正在获取答题成绩，请稍等..."/>

    <TextView
        android:id="@+id/success_hint_text"
        style="@style/textSize_black000_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="73dp"
        android:visibility="gone"/>


</LinearLayout>