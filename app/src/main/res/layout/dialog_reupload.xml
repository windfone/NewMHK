<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/textSize_black131_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/notice"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/is_exits"
        android:textColor="@color/blackE3E"
        android:textSize="@dimen/textsize_sp_14" />


    <Button
        android:id="@+id/re_commit_btn"
        style="@style/textSize_whitefff_13"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/back_right_selector"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="点击重新上传答案" />


</LinearLayout>